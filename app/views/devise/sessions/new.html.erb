<div class="d-flex flex-column align-items-center justify-content-center w-100 p-3">
  <div class="cardbox" >
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: 'homefood-input', autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { class: 'homefood-input', autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

         <div class="form-actions d-flex justify-content-center w-100 mt-5">
        <%= f.button :submit, "Log in", class: "btn btn-primary text-center" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
