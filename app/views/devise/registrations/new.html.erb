<h2>Sign up</h2>
<div class="d-flex flex-column align-items-center justify-content-center w-100 p-3">
  <div class="cardbox" >
    <h2 class="text-center">Create account</h2>
    <p class="text-center">Already have an account?<%= render "devise/shared/links" %></p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    input_html: { class: 'homefood-input', autocomplete: "name" } %>
          <%= f.input :address,
                    required: true,
                    input_html: { class: 'homefood-input', autocomplete: "address" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: 'homefood-input', autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: 'homefood-input', autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: 'homefood-input', autocomplete: "new-password" } %>
      </div>
      <div class="form-actions d-flex justify-content-center w-100 mt-5">
        <%= f.button :submit, "Sign up", class: "btn btn-primary text-center" %>
      </div>
    <% end %>
  </div>
</div>
