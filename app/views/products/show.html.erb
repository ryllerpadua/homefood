<div class="product-details">
<%= link_to 'Return to products', products_path(), class: "btn-return mt-4 mb-3" %>
  <div class="card-product">
    <%= cl_image_tag @product.photo.key, class: "food-card-image", crop: :fill %>
    <div class="card-product-infos">
      <h2><%= @product.title.capitalize %></h2>
      <p><%= @product.category.capitalize %></p>
      <h3><%= @product.description.capitalize%></h3>

      <h4><%= "R$ #{@product.price}" %></h4>
      <% if policy(Product).create? %>
      <%= link_to 'Buy', new_product_order_path(@product), class: "btn-return mt-2 mb-3" %>
      <%else%>
      <%= link_to 'Buy', new_user_session_path(@user) %>
      <% end %>
    </div>
  </div>

  <% if policy(@product).edit? %>
    <%= link_to 'edit', edit_product_path(@product), class: "btn-return mt-2 mb-3" %>
  <% end %>



  <% if policy(@product).destroy? %>
    <%= link_to 'Delete', product_path(@product), class: "btn-return mt-2 mb-3", method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
